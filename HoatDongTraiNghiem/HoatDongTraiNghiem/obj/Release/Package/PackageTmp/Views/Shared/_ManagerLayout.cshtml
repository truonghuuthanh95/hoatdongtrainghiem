<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 60px;">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand brand-name" href="/">PHẦN MỀM QUẢN LÝ HOẠT ĐỘNG TRẢI NGHIỆM</a>                              
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
        <div class="profile-sidebar">
            <div class="profile-userpic">
                <img src="http://placehold.it/50/30a5ff/fff" class="img-responsive" alt="">
            </div>
            <div class="profile-usertitle">
                <div class="profile-usertitle-name">Thành</div>
                <div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="divider"></div>

        <ul class="nav menu">
            <li><a href="/quanly"><em class="fa fa-dashboard">&nbsp;</em> Dashboard</a></li>
            <li><a href="/quanly/hopdongduytri"><em class="fa fa-plus">&nbsp;</em> Thêm Mới HĐDT</a></li>
            <li><a href="/quanly/hopdongtaolap"><em class="fa fa-plus">&nbsp;</em> Thêm Mới HĐTL</a></li>
            <li><a href="/quanly/danhsachhopdong/@DateTime.Now.Year"><em class="fa fa-file">&nbsp;</em> Danh sách hợp đồng</a></li>
            <li><a href="/quanly/kiemtratruong"><em class="glyphicon glyphicon-search">&nbsp;</em> Kiểm tra trường</a></li>
            <li><a href="/logout"><em class="fa fa-power-off">&nbsp;</em> Logout</a></li>
        </ul>
    </div><!--/.sidebar-->
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderBody()
        <hr />

    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
