<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 60px;">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">PHẦN MỀM QUẢN LÝ HOẠT ĐỘNG TRẢI NGHIỆM</a>
                <ul class="nav navbar-top-links navbar-left">
                    <li class="dropdown"><a href="/" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Tuyển dụng <span class="caret"></span>
                        </a>

                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Thuyên chuyển <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts">
                            <li><a href="/thuyenchuyen/dangkimoi">Đăng kí mới</a></li>
                            <li><a href="#">Tiến độ giải quyết hồ sơ</a></li>
                            <li><a href="/thuyenChuyen/capnhat/kiemtrama">Cập nhật thông tin đăng kí</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/thuyenchuyen/hosomauvaquytrinh">Mẫu hồ sơ</a></li>
                            <li><a href="#">Hướng dẫn</a></li>
                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-top-links navbar-right">
                    <li style="margin: 8px 15px;"><a href="/login" role="button" class="btn btn-info"><span class="glyphicon glyphicon-log-in"></span>&nbsp; Đăng Nhập</a></li>
                </ul>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderBody()
        <hr />

    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    
    @RenderSection("scripts", required: false)
</body>
</html>
