@{
    var account = (HoatDongTraiNghiem.Models.DAO.Account)Session[HoatDongTraiNghiem.Utils.Constant.MANAGER_SESSION];
    var accountPermission = (List<HoatDongTraiNghiem.Models.DAO.UserPermission>)Session[HoatDongTraiNghiem.Utils.Constant.MANAGER_PERMISSION_SESSION];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="~/Content/images/logo_so.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 60px;">
    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand brand-name" href="/quanly/index">PHẦN MỀM QUẢN LÝ HOẠT ĐỘNG TRẢI NGHIỆM</a>
            </div>
        </div><!-- /.container-fluid -->
    </nav>
    <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
        <div class="profile-sidebar">
            <div class="profile-userpic">
                <img src="http://placehold.it/50/30a5ff/fff" class="img-responsive" alt="">
            </div>
            <div class="profile-usertitle">
                <div class="profile-usertitle-name">@account.FirstName</div>
                <div class="profile-usertitle-status"><span class="indicator label-success"></span>Online</div>
            </div>
            <div class="clear"></div>
        </div>
        <div class="divider"></div>

        <ul class="nav menu">
            <li><a href="/quanly/index"><em class="fa fa-dashboard">&nbsp;</em> Dashboard</a></li>
            @{
                if (accountPermission.Where(s => s.PermissionId == 1).SingleOrDefault() != null)
                {
                    <li><a href="/quanly/hoatdongtrainghiem/1/@DateTime.Now.ToString("yyyy-MM-dd")/@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")"><em class="fa fa-plus">&nbsp;</em> Tiết học ngoài nhà trường</a></li>

                }
                if (accountPermission.Where(s => s.PermissionId == 3).SingleOrDefault() != null)
                {
                    <li><a href="/quanly/kynangxahoikynangsong/@DateTime.Now.ToString("yyyy-MM-dd")/@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")"><em class="fa fa-plus">&nbsp;</em> Kỹ năng xã hội</a></li>

                }
                if (accountPermission.Where(s => s.PermissionId == 5).SingleOrDefault() != null)
                {
                    <li><a href="/quanly/hoatdonghoctaptrainghiem/@DateTime.Now.ToString("yyyy-MM-dd")/@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")"><em class="fa fa-plus">&nbsp;</em> HĐ học tập trải nghiệm</a></li>

                }
                if (accountPermission.Where(s => s.PermissionId == 7).SingleOrDefault() != null)
                {
                    <li><a href="/quanly/hoatdongtrainghiem/@DateTime.Now.ToString("yyyy-MM-dd")/@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")"><em class="fa fa-plus">&nbsp;</em> Hoạt động ngoại khóa</a></li>

                }
            }
            <li><a href="/logout"><em class="fa fa-power-off">&nbsp;</em> Logout</a></li>
        </ul>
    </div><!--/.sidebar-->
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval")
        @RenderBody()
        <hr />

    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
